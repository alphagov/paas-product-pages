{
  "name": "paas-product-pages",
  "description": "GOV.UK PaaS product pages",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "next",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "local": "npm-run-all rollup:build --parallel dev rollup:watch",
    "build": "rollup -c && next build && mkdir out/.well-known && cp out/security.txt.html out/.well-known/",
    "start": "next start",
    "test": "npm run lint && vitest run",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "dependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "govuk-frontend": "^5.2.0",
    "gray-matter": "^4.0.3",
    "next": "^14.1.3",
    "next-mdx-remote": "^4.4.1",
    "postcss-nested": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-slug": "^6.0.0",
    "sass": "^1.72.0",
    "standard": "^17.1.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.69",
    "jsdom": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "rollup": "^4.13.0",
    "rollup-plugin-output-manifest": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": "20.x.x",
    "npm": ">=10.x.x"
  },
  "standard": {
    "ignore": [
      "out/*"
    ],
    "env": [
      "es6",
      "browser"
    ]
  }
}
