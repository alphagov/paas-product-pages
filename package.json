{
  "name": "paas-product-pages",
  "description": "GOV.UK PaaS product pages",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "local": "npm-run-all rollup:build --parallel dev rollup:watch",
    "build": "rollup -c && next build && next export",
    "start": "next start",
    "test": "npm run lint && jest",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "nginx:local": "docker run --rm -it -v $PWD:/etc/nginx -p 8080:8080 nginx bash -c 'cp /etc/nginx/nginx.conf /tmp/nginx.old && sed -i 's/{{port}}/8080/' /etc/nginx/nginx.conf && nginx ; mv /tmp/nginx.old /etc/nginx/nginx.conf'"
  },
  "dependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@next/mdx": "^11.1.2",
    "govuk-frontend": "^3.14.0",
    "gray-matter": "^4.0.3",
    "next": "^11.1.2",
    "next-mdx-remote": "^3.0.6",
    "postcss-nested": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-slug": "^5.0.0",
    "sass": "^1.43.2",
    "standard": "^16.0.4"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.31",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.10",
    "rollup": "^2.58.0",
    "rollup-plugin-output-manifest": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.4.4"
  },
  "standard": {
    "ignore": [
      "out/*"
    ],
    "env": [
      "jest",
      "es6",
      "browser"
    ],
    "globals": [
      "dataLayer"
    ]
  }
}
